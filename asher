#include <Servo.h>
Servo servoy;  
Servo servox;  
Servo servoa; 
int posx = 35;   
int posy = 180;   
int posa = 50;   
void setup() { 
  //x & y
  servoy.attach(9);  
  servox.attach(6); 
  servox.write(posx);
  
  for (posy = 180; posy >= 0; posy -= 1) { 
    servoy.write(posy);              
    delay(10);                       
  }
  
  //asher
  servoa.attach(3);  
  for (posa = 50; posa <= 80; posa += 3) { 
    servoa.write(posa);              
    delay(8);                       
  }
  for (posa = 90; posa >= 65; posa -= 1) { 
    servoa.write(posa);              
    delay(10);                       
  }
  for (posa = 65; posa <= 90; posa += 3) { 
    servoa.write(posa);              
    delay(8);                       
  }
  for (posa = 90; posa >= 50; posa -= 1) { 
    servoa.write(posa);              
    delay(10);                       
  }
  
  //y
   for (posy = 0; posy <= 180; posy += 1) { 
    servoy.write(posy);              
    delay(5);                       
  }  
                                
}
void loop() {
}
